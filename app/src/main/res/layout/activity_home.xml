<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.HomeActivity">

    <LinearLayout
        android:id="@+id/ll_main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/ll_main_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/top_stroke">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/rd_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/home_home"
                android:paddingTop="10dp"
                android:text="@string/home_home"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/rd_line"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/home_line"
                android:paddingTop="10dp"
                android:text="@string/home_line"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/rd_user"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/home_user"
                android:paddingTop="10dp"
                android:gravity="center"
                android:text="@string/home_user"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000000" />

        </RadioGroup>

    </LinearLayout>

</LinearLayout>